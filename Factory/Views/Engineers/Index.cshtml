@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

  <h2>Engineer Control Panel</h2>

  @if (@Model.Count == 0)
  {
    <h3>You haven't hired any Engineers yet!</h3>
  }

  @foreach (Engineer element in Model)
  {
    <li>@Html.ActionLink($"{element.Name}","Details", new { id = element.EngineerId })</li>
  }

<p>@Html.ActionLink("Add new engineer", "Create", null, null, new { @class = "navBtn"})</p>
<p>@Html.ActionLink("Go back home", "Index", "Home", null, new { @class = "navBtn"})</p>